{% extends 'base_mtgcrypto.html' %}

{% with "Mythic Rare" as mythic %}
{% with "Rare" as rare %}
{% with "Uncommon" as uncommon %}
{% with "Common" as common %}
{% with "Basic Land" as basic %}
{% with "Special" as special %}



{% block articlecontent%}

<div class="site_section">
  <div class="container">
    <h1>Card Catalog</h1>
    <p>Select a set, then see what cards are offered.</p>

{% if set_selection %}
{{ set_selection }}
Cards in set:
{% for card in cards %}
  {% if forloop.first %}
<table>
  <thead>
  <tr><th>English Name</th><th>Rarity</th></tr>
  </thead>
  {% endif %}
<tr><td>{{card.name}}</td><td>
{% if card.rarity == 1 %}
    {{mythic}}
{% if card.rarity == 2 %}
    {{rare}}
Generic detail view CardView must be called with either an object pk or a slug.
</td></tr>
  {% if forloop.last %}
</table>
  {% endif %}
{% endfor %}


{% else %}
  {% for mtg_set in mtg_sets %}
    {% if forloop.first %}
<table>
  <thead>
  <tr><th>Code</th><th>Name</th><th>Release Date</th></tr>
  </thead>
  <tbody>
    {% endif %}
<tr><td><a href="{% url 'catalog' %}{{ mtg_set.code}}">{{ mtg_set.code }}</a></td><td>{{ mtg_set.name }}</td><td>{{ mtg_set.release_date }}</td></tr>
    {% if forloop.last %}
  </tbody>
</table>
    {% endif %}
  {% endfor %}
{% endif %}
  </div>
</div>
{% endblock %}
